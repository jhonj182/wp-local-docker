#!/bin/bash
set -e

DB_ROOT_PASSWORD="wp_root_secret_2024"

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'

if [ -z "$1" ]; then
    echo -e "${RED}Error: Debes especificar el nombre del sitio a eliminar${NC}"
    echo -e "Uso: ${CYAN}wp_remove mi-sitio${NC}"
    exit 1
fi

SITE_NAME="$1"
SITE_DIR="$HOME/wp-sites/$SITE_NAME"
DB_NAME="wp_${SITE_NAME//-/_}"
DB_USER="wp_${SITE_NAME//-/_}"

if [ ! -d "$SITE_DIR" ]; then
    echo -e "${RED}Error: El sitio '$SITE_NAME' no existe${NC}"
    exit 1
fi

echo -e "${YELLOW}âš ï¸  Esto eliminarÃ¡ completamente el sitio '${SITE_NAME}':${NC}"
echo -e "  - Contenedor WordPress"
echo -e "  - Base de datos: ${CYAN}${DB_NAME}${NC}"
echo -e "  - Usuario DB: ${CYAN}${DB_USER}${NC}"
echo -e "  - Archivos en: ${CYAN}${SITE_DIR}${NC}"
echo ""
read -p "Â¿EstÃ¡s seguro? (s/N): " confirm

if [[ "$confirm" != "s" && "$confirm" != "S" ]]; then
    echo "Cancelado."
    exit 0
fi

echo -e "${YELLOW}ğŸ—‘ï¸  Eliminando sitio ${SITE_NAME}...${NC}"

# Detener y eliminar contenedor
cd "$SITE_DIR"
docker compose down -v 2>/dev/null || true

# Eliminar base de datos y usuario de MariaDB
if docker ps --format '{{.Names}}' | grep -q 'wp-mariadb'; then
    echo -e "${YELLOW}ğŸ—„ï¸  Eliminando base de datos y usuario...${NC}"
    docker exec wp-mariadb mariadb -uroot -p"${DB_ROOT_PASSWORD}" -e "
        DROP DATABASE IF EXISTS \`${DB_NAME}\`;
        DROP USER IF EXISTS '${DB_USER}'@'%';
        FLUSH PRIVILEGES;
    " 2>/dev/null || echo -e "${YELLOW}Nota: No se pudo eliminar la DB (puede que ya no exista)${NC}"
fi

# Eliminar archivos (con sudo porque WordPress crea archivos como www-data)
# Intentar sin sudo primero, si falla usar sudo
if ! rm -rf "$SITE_DIR" 2>/dev/null; then
    echo -e "${YELLOW}ğŸ” Se requiere sudo para eliminar archivos de WordPress...${NC}"
    sudo rm -rf "$SITE_DIR"
fi

echo -e "${GREEN}âœ… Sitio '${SITE_NAME}' eliminado completamente.${NC}"
