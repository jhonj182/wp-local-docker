#!/bin/bash

CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

if [ -z "$1" ]; then
    echo -e "${RED}Error: Debes especificar el nombre del sitio${NC}"
    echo -e "Uso: ${CYAN}wp_start mi-sitio${NC}"
    exit 1
fi

SITE_NAME="$1"
SITE_DIR="$HOME/wp-sites/$SITE_NAME"

if [ ! -d "$SITE_DIR" ]; then
    echo -e "${RED}Error: El sitio '$SITE_NAME' no existe${NC}"
    exit 1
fi

echo -e "${YELLOW}▶ Iniciando sitio ${CYAN}$SITE_NAME${NC}..."
cd "$SITE_DIR"
docker compose start
echo -e "${GREEN}✅ Sitio iniciado: ${CYAN}http://${SITE_NAME}.test${NC}"
